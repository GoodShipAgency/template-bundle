{#
    Use this when tabs arent going to be linking or doing ajax calls.
    When a tab is navigated, an event will be dispatched. Listen to this to do any callbacks.
    Event Dispatched: 'tabs-navigated' with arguments: tabId, tabName.

    Options:
        id: REQUIRED
        title
        tabs: [{ name: string }]
    blocks:
        actions
#}

{% set actions %}
    {% block actions %}{% endblock %}
{% endset %}

<div
    class="relative pb-5 border-b border-gray-200 sm:pb-0"
    id="{{ id }}"
    x-data="tabs({{ tabs|json_encode() }})"
    x-on:tabs-navigate.window="if ($event.detail.id === id) {navigate($event.detail.tabName)}"
    x-cloak
>
    <div class="md:flex md:items-center md:justify-between">
        {% if title is defined %}
            <h1 class="text-lg leading-6 font-medium text-gray-900 -mb-2">
                {{ title }}
            </h1>
        {% endif %}

        {% if actions|trim is not empty %}
            <div class="mt-3 flex md:mt-0 md:absolute md:top-3 md:right-0">
                {{ actions }}
            </div>
        {% endif %}
    </div>

    <div class="mt-6">
        <!-- Dropdown menu on small screens -->
        <div class="mt-1 relative w-full sm:w-64 sm:hidden">
            <button
                type="button"
                x-ref="button"
                @click="openDropdown"
                aria-haspopup="listbox"
                :aria-expanded="showDropdown"
                aria-labelledby="listbox-label"
                class="relative w-full bg-white border border-gray-300 rounded-md shadow-sm pl-3 pr-10 py-2 text-left capitalize cursor-default focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
            >
                <span class="w-full inline-flex truncate" x-text="currentTabName">
                </span>
                <span class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" x-description="Heroicon name: selector" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L10 5.414 7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3zm-3.707 9.293a1 1 0 011.414 0L10 14.586l2.293-2.293a1 1 0 011.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </span>
            </button>

            <div
                class="absolute mt-1 w-full rounded-md bg-white shadow-lg"
                x-show="showDropdown"
                @click.outside="closeDropdown"
                x-transition:leave="transition ease-in duration-100"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
            >
                <ul x-ref="listbox" tabindex="-1" role="listbox" aria-labelledby="listbox-label" class="max-h-60 rounded-md py-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none sm:text-sm">

                    {% for tab in tabs %}
                        <li id="listbox-item-{{ loop.index }}" role="option" class="cursor-default select-none relative text-gray-900 capitalize">
                            <button
                                class="font-normal truncate py-2 px-3 w-full block text-left"
                                :class="currentTabName === '{{ tab.name }}' ? 'pointer-events-none truncate py-2 px-3 w-full block bg-gray-50' : 'font-normal truncate py-2 px-3 w-full block text-left'"
                                type="button"
                                @click="navigate('{{ tab.name }}')"
                            >{{ tab.name }}</button>
                        </li>
                    {% endfor %}

                </ul>
            </div>
        </div>

        <!-- Tabs at small breakpoint and up -->
        <div class="hidden sm:block">
            <nav class="-mb-px flex space-x-8">
                {% for tab in tabs %}
                    <button
                        :class="currentTabName === '{{ tab.name }}' ? 'pointer-events-none border-indigo-500 text-indigo-600 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm'"
                        type="button"
                        @click="navigate('{{ tab.name }}')"
                    >
                        {{ tab.name }}
                    </button>
                {% endfor %}
            </nav>
        </div>
    </div>
</div>