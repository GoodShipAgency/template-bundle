{% extends "@MashboTemplate/components/overlays/slideout-base.html.twig" %}

{#
    Blocks
        title
        subtitle
        content
#}

{% set subtitle %}
    {% block subtitle %}{% endblock %}
{% endset %}

{% block slideout_content %}
    {# Header #}
    <div class="px-4 py-6 bg-cPurple sm:px-6 flex-shrink-0">
        <div class="flex items-start justify-between space-x-3">
            <div class="space-y-1">
                <h2 class="text-lg font-medium text-white" id="slideout-title">
                    {% block title %}{% endblock %}
                </h2>

                {% if subtitle|trim is not empty %}
                    <p class="text-sm text-indigo-300">
                        {{ subtitle }}
                    </p>
                {% endif %}
            </div>

            <div class="h-7 flex items-center">
                <button type="button" class="bg-indigo-700 rounded-md text-indigo-200 hover:text-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-100" @click="slideoutOpen = false">
                    <span class="sr-only">Close panel</span>
                    <svg class="h-6 w-6" x-description="Heroicon name: outline/x" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div id="slideout-inner-content" class="flex-1">
        {% block content %}{% endblock %}
    </div>
{% endblock %}


